<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Mercado-Liebre</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
		<!-- Bootstrap Grid Stylesheet -->
		<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
		<!-- Own Stylesheet -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/css/list.css">
		<link rel="stylesheet" href="/css/detailProducts.css">
		
		
	</head>
<body>
	<!-- Header -->
	<%- include('./partials/header.ejs') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= productoSeleccionado[0].name %> </h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/img/imgArticulos/<%= productoSeleccionado[0].image%>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= productoSeleccionado[0].description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h3 class="product-detail-title"><%= productoSeleccionado[0].name %></h3>

						<% if (productoSeleccionado[0].discount != 0) {%> 
							<p class="product-detail-price small">
								<span>$<%= toThousand(productoSeleccionado[0].price )%></span>
								/
								<b><%= productoSeleccionado[0].discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand((productoSeleccionado[0].price * (1-(productoSeleccionado[0].discount/100)))) %> 
							</p>
							<% } else {%> 
							
							<p class="product-detail-price">
								$ <%= toThousand(productoSeleccionado[0].price) %>
							</p>
							<% } %> 

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<!-- <a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr> -->

						<a href="/products/edit/<%= productoSeleccionado[0].id %>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="<%= productoSeleccionado[0].id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>